<!-- views/pages/users.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
   <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
   <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
   <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
   <script>
    $(document).ready(function() {
       $('#usertable').DataTable();
    });
   </script>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
<div id="container">
<h3>OUTSTEP-LGL Community</h3>
<table id="usertable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Affiliation</th>
                <th>Email <span class="glyphicon glyphicon-envelope"></span></th>
                <th>Organization</th>
                <th>Role</th>
		<th>Badge</th>
            </tr>
        </thead>
        <tbody>
	    <% for(let i = 0; i < users.length; i++){ %>
            <tr>
                <td><%= users[i].firstname%> <%= users[i].lastname %></td>
                <td><%= users[i].affiliation%> </td>
                <td><%= users[i].email%></td>
                <td><%= users[i].organization%></td>
                <td><%= users[i].role%></td>
		<td align="center"><a href="<%= users[i].image_location%>"><span class="glyphicon glyphicon-picture"></span></a></td>
            </tr>
	   <%}%>
        </tbody>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Affiliation</th>
                <th>Email <span class="glyphicon glyphicon-envelope"></span></th>
                <th>Organization</th>
                <th>Role</th>
		<th>Badge</th>
            </tr>
        </tfoot>
    </table>
</div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
